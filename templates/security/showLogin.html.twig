{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}
{% block stylesheets %}
 {{ parent() }}
    <style>
        html {
            background-color: #224abe !important;
        }
    </style>
{% endblock %}
{% block body %}

<body class="bg-gradient-primary">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Bienvenu !</h1>
                  </div>
                      {{ form_start(loginForm, {'attr': {'class': 'user'}}) }}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            {{ form_row(loginForm.email, {'value': last_username ,'attr': {'class': 'form-control form-control-user'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(loginForm.password, {'value': last_username ,'attr': {'class': 'form-control form-control-user'} }) }}
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox small">
             <input type="checkbox" class="custom-control-input" id="customCheck" name="_remember_me"> 
             <label class="custom-control-label" for="customCheck">Se souvenir de moi</label>
        </div>
    </div>
        <button type="submit" class="btn btn-primary btn-user btn-block">Se connecter</button>
    {{ form_end(loginForm) }}
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

{% block jsTable %}{% endblock %}
</body>
{% endblock %}
