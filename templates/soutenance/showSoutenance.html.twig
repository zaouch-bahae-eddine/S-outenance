{% extends 'base.html.twig' %}

{% block title %}Soutenance{% endblock %}

{% block content %}

    <!-- Modal Ajouter Filière-->
    <div class="modal fade" id="addModele" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLongTitle">Ajouter salle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{ form_start(soutenanceForm, {'action': path('soutenance_add'), 'method': 'POST'}) }}
                <div class="modal-body">
                    {{ form_widget(soutenanceForm.nom) }}
                    {{ form_widget(soutenanceForm.alerte) }}
                    {{ form_widget(soutenanceForm.module) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
                {{ form_end(soutenanceForm) }}
            </div>
        </div>
    </div>
    <!--Modal Ajouter Filière-->

    <!-- Modal modifier Soutenance first form-->
    <div class="modal fade" id="setModele" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLongTitle">Modifier salle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{ form_start(soutenanceFormSet, {'action': path('soutenance_add_set',{'id': idSoutenance, 'nb': 0}), 'method': 'POST'}) }}
                <div class="modal-body">
                    {{ form_widget(soutenanceFormSet.nom) }}
                    {{ form_widget(soutenanceFormSet.alerte) }}
                    {{ form_widget(soutenanceFormSet.module) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
                {{ form_end(soutenanceFormSet) }}
            </div>
        </div>
    </div>
    <!-- Modal modifier Soutenance first form-->
    <!-- Modal modifier Soutenance first form-->
    <div class="modal fade" id="setModele2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLongTitle">Modifier salle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{ form_start(soutenanceEvaluateurFormSet, {'action': path('soutenance_add_set',{'id': idSoutenance, 'nb': 1}), 'method': 'POST'}) }}
                <div class="modal-body">
                    {{ form_widget(soutenanceEvaluateurFormSet.evaluateurs) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
                {{ form_end(soutenanceEvaluateurFormSet) }}
            </div>
        </div>
    </div>
    <!-- Modal modifier Soutenance first form-->

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Gestion Soutenance</h1>
            <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModele">
                <i class="fas fa-plus fa-sm text-white-50"></i> Nouveau Soutenance
            </button>
        </div>
        <div class="row">
            {% for soutenance in soutenances %}


                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-6 col-md-6 mb-6" style="margin-top: 20px;">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="dropdown no-arrow" style="position: absolute; right: 0;">
                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                    style="padding: 10px; font-size: 20px;"
                                >
                                    <i class="fas fa-ellipsis-h fa-sm fa-fw"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                    <div class="dropdown-header">Gestion Soutenance</div>
                                    <a class="dropdown-item" href="{{ path('soutenance_set', {'id': soutenance.id, 'nb': 1}) }}">Edit</a>
                                    <a class="dropdown-item" href="{{ path('soutenance_set', {'id': soutenance.id, 'nb': 2}) }}">Evaluateurs</a>
                                    <a class="dropdown-item" href="{{ path('soutenance_creneau_show', {'id': soutenance.id} ) }}">Créneaux</a>
                                    <a class="dropdown-item" href="{{ path('soutenance_rendu_note_show', {'id': soutenance.id} ) }}">Rendus</a>
                                    <a class="dropdown-item" href="{{ path('soutenance_note_show', {'id': soutenance.id} ) }}">Notes</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Delete</a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Module {{ soutenance.module.nom }}</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ soutenance.nom }}</div>
                                        <div class="h6 mb-0 font-weight-bold text-gray-700">{{ soutenance.alerte|date }}</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
    <!-- /.container-fluid-->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>

    {% endfor %}

{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {% if setModel == true %}
            <script>
                const $=jQuery;
                {% if nb == 1 %}
                    $('#setModele').modal('show');
                {% elseif nb == 2 %}
                $('#setModele2').modal('show');
                {% endif %}
            </script>
        {% endif %}
    {% endblock %}