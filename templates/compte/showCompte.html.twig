{% extends 'base.html.twig' %}

{% block title %}Hello CompteController!{% endblock %}
{% block stylesheets %}
 {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row justify-content-center">

        <div class="col-xl-4 col-lg-4 col-md-4">

            <div class="card o-hidden border-0 shadow-lg my-5" style="width: fit-content;">
                <div class="card-body p-0" >
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Changer Mon mot de passe !</h1>
                                </div>
                                <form action="{{ path('set_compte') }}" method="post">
                                <div class="form-group">
                                    <input type="password" id="sy-id-old" name="sy-id-old" class="form-control form-control-user" placeholder="Votre ancien mot de passe">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="sy-id-new" name="sy-id-new" class="form-control form-control-user" placeholder="Nouveau mot de passse">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="sy-id-new-2" name="sy-id-new-2" class="form-control form-control-user" placeholder="Retapez le nouveau mot de passse">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Modifier</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


    {% for message in app.flashes('success') %}
        <div class="notifyS">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="notifyE">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
